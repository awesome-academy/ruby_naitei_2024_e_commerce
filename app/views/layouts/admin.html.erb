<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title t("admin.dashboard") %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "admin_base", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "base", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body class="admin__body">
    <%= render "layouts/admin/sidebar" %>
    <div class="wrapper">
      <%= render "layouts/admin/header" %>
      <div class="container">
        <%= render "shared/flash_messages" %>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
