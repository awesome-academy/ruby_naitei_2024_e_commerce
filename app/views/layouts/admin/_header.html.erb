<header class="admin-header">
  <div class="header-left">
    <%= link_to t("app_name"), root_path, class: "logo" %>
  </div>
  <div class="header-right">
    <div class="i18n">
      <%= link_to t("language.english"), locale: :en %>
      <hr>
      <%= link_to t("language.vietnamese"), locale: :vi %>
    </div>
    <div class="user">
      <i class="fa-solid fa-message admin-chat"></i>
      <%= image_tag current_user.avatar, class: "user__img" %>
      <span class="user__name"><%= current_user.name %></span>
    </div>
  </div>
</header>
